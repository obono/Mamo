<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="#8A22"
                android:endColor="#8C88"
                android:type="linear"
                />
            <stroke android:width="4dip" android:color="#8622" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="#C00"
                android:endColor="#F88"
                android:type="linear"
                />
            <stroke android:width="4dip" android:color="#800" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="#FCC"
                android:endColor="#F44"
                android:type="linear"
                />
            <stroke android:width="4dip" android:color="#C44" />
        </shape>
    </item>
</selector>